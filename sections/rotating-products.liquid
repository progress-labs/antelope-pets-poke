<div class="fullPageBG color-{{ section.settings.color_scheme }}">
  <div class="rotatingProductsContainer {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %} color-{{ section.settings.color_scheme }}">
    <h2>{{ section.settings.heading }}</h2>
    <div class="slideBG">
      <img
        id="right_arrow"
        src="https://cdn.shopify.com/s/files/1/0824/9344/0298/files/Right_Arrow_1.svg?v=1696191496"
        loading="lazy"
        alt="right arrow"
        height="40"
        width="55"
        tabindex="0"
      >
      <img
        id="left_arrow"
        src="https://cdn.shopify.com/s/files/1/0824/9344/0298/files/Left_Arrow_1.svg?v=1696191496"
        loading="lazy"
        alt="left arrow"
        height="40"
        width="55"
        tabindex="0"
      >
      {% for block in section.blocks %}
        {% if block.settings.topImage != blank %}
          <img
            id="topImage"
            src="{{ block.settings.topImage | img_url: '200x200'}}"
            loading="lazy"
            alt=""
          >
        {% endif %}
        <div class="slide">
          <h2>{{ block.settings.heading }}</h2>
          <p id="subheading">{{ block.settings.subheading }}</p>
          <div class="rotatingProducts__productImages">
            <div class="productImage">
              {% if block.settings.productImage1 != blank %}
                <figure>
                  <img
                    id="productImage1"
                    src="{{ block.settings.productImage1 | img_url: '200x200'}}"
                    loading="lazy"
                    alt=""
                  >
                  <figcaption>{{ block.settings.productName1 }}</figcaption>
                </figure>
              {% endif %}
            </div>
            {% if block.settings.productImage2 != blank %}
              <div class="productImage">
                <figure>
                  <img
                    id="productImage2"
                    src="{{ block.settings.productImage2 | img_url: '200x200'}}"
                    loading="lazy"
                  >
                  <figcaption>{{ block.settings.productName2 }}</figcaption>
                </figure>
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Rotating Products",
  "settings": [
    {
      "type": "text",
      "id":"heading",
      "label": "Heading",
      "default": "Overall Heading"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "Auto Rotate",
      "default": false
    },
    {
      "type": "range",
      "id": "change_slides_speed",
      "min": 3,
      "max": 9,
      "step": 2,
      "unit": "s",
      "label": "Speed",
      "default": 5
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    }
  ],
  "blocks":[
    {
    "type": "column",
      "name": "Product Page",
      "settings":[
        {
      "type": "text",
      "id":"heading",
      "label": "Heading",
      "default": "Product Title"
    },
        {
      "type": "text",
      "id":"subheading",
      "label": "Subheading",
      "default": "Product Description"
    },
    {
      "type": "image_picker",
      "id": "topImage",
      "label": "Large Product Image"
    },
        {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },        {
          "type": "image_picker",
          "id":"productImage1",
          "label": "Product Image 1"
        },
        {
          "type": "text",
          "id": "productName1",
          "label": "Product Name 1",
          "default": "Product Name"

        },        {
          "type": "image_picker",
          "id":"productImage2",
          "label": "Product Image 2"
        },
        {
          "type": "text",
          "id": "productName2",
          "label": "Product Name 2",
          "default": "Product Name"

        }

      ]
    }
  ],
  "presets":[
    {
      "name": "Rotating Products"
    }
  ]
}
{% endschema %}


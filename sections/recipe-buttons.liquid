<div
  class="recipe-buttons page-width color-{{ section.settings.color_scheme }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
>
  <p>{{ section.settings.heading }}</p>
  <div class="buttons-wrapper">
    {% for block in section.blocks %}
      {% case block.type %}
        {%- when 'button' -%}
          {%- if block.settings.button_label != blank -%}
            <a
              {% if block.settings.button_link == blank %}
                role="link" aria-disabled="true"
              {% else %}
                href="{{ block.settings.button_link }}"
              {% endif %}
              class="button button--primary {{ block.settings.item_tag }}"
            >
              {{ block.settings.button_label | escape }}
            </a>
          {%- endif -%}
      {%- endcase -%}
    {%- endfor -%}
  </div>
  <hr style="text-align:left;margin-left:0">
</div>

{% schema %}
{
  "name": "Recipe Buttons",
  "settings": [
        {
    "type": "text",
    "id":"heading",
    "label": "Heading",
    "default": "Heading"
  },    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    }
  ],
  "blocks":[
    {
    "type": "button",
    "name": "Button",
    "settings":[
      {
      "type": "text",
      "id": "button_label",
      "label": "Label",
      "default": "Recipe"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Page Link"
      },
      {
        "type": "text",
        "id": "item_tag",
        "label":"Item Tag"
      }
    ]
  }
  ],
  "presets":[
  {
    "name": "Recipe Buttons"
  }
]
}
{% endschema %}

{% stylesheet %}
  .recipe-buttons p{
    text-align:left;
    padding: 0 1.5rem;
    text-transform: uppercase;
  }
  .recipe-buttons .button.button--primary{
    width: 40%;
    margin: .5rem;
    background: transparent;
    border: 1px solid #65113B;
    border-radius: 7px;
    color: #65113B;
    padding: 10px;
    font-size: 13px;
    text-transform: uppercase;
    word-wrap: break-word;
    text-align: center;
  }
  .buttons-wrapper{
        display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }
{% endstylesheet %}
